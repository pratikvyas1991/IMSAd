<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/corped_back"
              android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#90000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="70dp"
                style="@style/AVLoadingIndicatorView"
                android:visibility="gone"
                app:indicatorColor="#F44336"
                app:indicatorName="BallSpinFadeLoaderIndicator"
                />
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:background="#90000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:orientation="vertical"
                            android:layout_weight="70"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:gravity="center"
                                android:id="@+id/titleCustName"
                                android:textSize="45dp"
                                android:textColor="@color/cardview_light_background"
                                android:text="Text View"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="25dp"
                        android:layout_weight="75"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:textSize="20dp"
                                android:textColor="@color/cardview_light_background"
                                android:text="Person Details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="left"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:gravity="left"
                                android:layout_weight="35"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/tab_text_selected_color"
                                android:text="Age "
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvCustAge"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="65"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/cardview_light_background"
                                android:text="89 years"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="left"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:gravity="left"
                                android:layout_weight="35"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/tab_text_selected_color"
                                android:text="Gender"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvCustGender"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="65"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/cardview_light_background"
                                android:text="Female"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="left"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:gravity="left"
                                android:layout_weight="35"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/tab_text_selected_color"
                                android:text="Reason"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvCustReason"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="65"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/cardview_light_background"
                                android:text="Natural"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="left"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:gravity="left"
                                android:layout_weight="35"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/tab_text_selected_color"
                                android:text="Date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvCustDate"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="65"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/cardview_light_background"
                                android:text="12-Oct-1024"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="left"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:gravity="left"
                                android:layout_weight="35"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/tab_text_selected_color"
                                android:text="Time "
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvCustTime"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="65"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/cardview_light_background"
                                android:text="12 Am"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <View
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/cardview_light_background"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:textSize="20dp"
                                android:textColor="@color/cardview_light_background"
                                android:text="Relatives Personal Details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="left"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:gravity="left"
                                android:layout_weight="35"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/tab_text_selected_color"
                                android:text="Name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvCustRelativeName"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="65"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/cardview_light_background"
                                android:text="anthony Dsouza Yadav"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="left"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:gravity="left"
                                android:layout_weight="35"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/tab_text_selected_color"
                                android:text="Relation "
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvCustRelativeRelation"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="65"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/cardview_light_background"
                                android:text="Brother"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="left"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView

                                android:gravity="left"
                                android:layout_weight="35"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/tab_text_selected_color"
                                android:text="Mobile"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvCustMobile"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="65"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/cardview_light_background"
                                android:text="12345675678"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="left"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:gravity="left"
                                android:layout_weight="35"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/tab_text_selected_color"
                                android:text="Address"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvCustAddress"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="65"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/cardview_light_background"
                                android:text="hello hi this is my name and aia ms dasd asdjklhasdjhakdsahkjsdkajsdhaksdhakd"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </FrameLayout>

    </LinearLayout>


</LinearLayout>