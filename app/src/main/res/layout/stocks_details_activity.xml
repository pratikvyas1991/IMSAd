<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/corped_back"
              android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="35dp"
                    android:textColor="@color/cardview_light_background"
                    android:text="Text View "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/cardview_light_background"
                    android:text="Organization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="45dp"
                    android:textColor="@color/cardview_light_background"
                    android:text="264"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_weight="85"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="30dp"
                    android:textColor="@color/cardview_light_background"
                    android:text="Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="50"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_light_background"
                    android:text="last updated "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="50"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_light_background"
                    android:text="12-jan-2016"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="50"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_light_background"
                    android:text="updated time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="50"
                    android:textSize="25dp"
                    android:textStyle="bold"                    android:textColor="@color/cardview_light_background"
                    android:text="12 AM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="50"
                    android:textSize="25dp"
                    android:textStyle="bold"                    android:textColor="@color/cardview_light_background"
                    android:text="Total Stock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="50"
                    android:textSize="25dp"
                    android:textStyle="bold"                    android:textColor="@color/cardview_light_background"
                    android:text="300 "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="50"
                    android:textSize="25dp"
                    android:textStyle="bold"                    android:textColor="@color/cardview_light_background"
                    android:text="Total Price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="50"
                    android:textSize="25dp"
                    android:textStyle="bold"                    android:textColor="@color/cardview_light_background"
                    android:text="300 Rs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_margin="10dp"
                    android:layout_weight="50"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:background="@color/colorAccent"
                    android:textColor="@color/cardview_light_background"
                    android:text="Cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnEditStock"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_weight="50"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_light_background"
                    android:text="EDIT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>